<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#eeeeee">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cookie6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="печенье с орехом и "
                android:textAllCaps="true"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="белым шоколадом"
                android:textAllCaps="true"
                android:textSize="25dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ингредиенты:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350 г орехов макадамия\n
250 г коричневого сахара\n
220 г сливочного масла\n
120 г сахара\n
100 г белого шоколада\n
2,5 стакана пшеничной муки\n
2 яйца\n
1 ч.л. соды\n
ванилин
соль"
                android:textSize="13dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Способ приготовления:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Как приготовить печенье с белым шоколадом и орехами. Просеять муку в глубокую миску, добавить пару щепоток соли и гашеную соду, перемешать. Размягченное масло смешать с сахаром, до однородности и растворения крупинок сахара взбить. Вбить в масляную смесь яйца, до однородности взбить, добавить ванилин, перемешать. Соединить масляную смесь с мучной и перемешать до однородности. Мелко порубить орехи, добавить в тесто, туда же добавить мелко порубленный острым ножом белый шоколад, перемешать. Застелить противень для печенья пергаментом, выложить на него тесто с помощью ложки, формуя печенье. Поставить противень в нагретую до 180 градусов духовку и запекать 10мин до легкого зарумянивания. Приятного чаепития!"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:adjustViewBounds="true"
                android:divider="@drawable/separator"
                android:dividerPadding="3dp"
                android:showDividers="middle">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Назад"
                android:onClick="back2"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#9E9E9E"
                android:background="#eeeeee"
                android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Вопросы?"
                android:onClick="mail2"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#9E9E9E"
                android:background="#eeeeee"
                android:layout_marginTop="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>